<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="32dp"
    tools:context=".ForgotPasswordActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quên Mật khẩu"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhập địa chỉ email của bạn. Chúng tôi sẽ gửi một đường link đặt lại mật khẩu đến email này."
        android:layout_marginBottom="32dp"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/edit_text_forgot_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email đã đăng ký"
        android:inputType="textEmailAddress"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/button_send_otp_forgot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gửi Email Đặt lại Mật khẩu"/>

</LinearLayout>